    <!-- Main dashboard container -->
    <main class="dashboard-container">
        <!-- Sidebar navigation -->
        <aside class="sidebar">
            <nav class="sidebar-menu">
                <%= link_to '<i class="bx bx-home-circle"></i> <span>Home</span>'.html_safe, root_path, class: 'menu-item' %>
                <%= link_to '<i class="bx bx-plus-circle"></i> <span>Create Complaint</span>'.html_safe, new_complaint_path, class: 'menu-item' %>
                <%= link_to '<i class="bx bx-list-ul"></i> <span>My Complaints</span>'.html_safe, normal_user_complaints_path, class: 'menu-item' %>
                <%= link_to '<i class="bx bx-user"></i> <span>My Profile</span>'.html_safe, normal_user_profile_path, class: 'menu-item active' %>
                <%= link_to '<i class="bx bx-edit"></i> <span>Edit Profile</span>'.html_safe, edit_normal_user_profile_path, class: 'menu-item' %>
            </nav>
        </aside>

        <!-- Content area -->
        <section class="content-area spcl">
            <h1>Your Profile</h1>

            <div class="card">
                <div class="card-body">
                    <p><strong>Name:</strong> <%= @profile.name %></p>
                    <p><strong>Email:</strong> <%= @profile.email %></p>
                    <p><strong>Role:</strong> <%= @profile.role.titleize %></p>
                </div>
            </div>

            <div class="mt-3">
                <%= link_to 'Edit Profile', edit_normal_user_profile_path, class: "btn btn-primary" %>
                <%= link_to 'Back to Dashboard', normal_user_dashboard_path, class: "btn btn-secondary" %>
            </div>
        </section>
    </main>