<div class="base">
    <div class="container">
      <!--container box-->

      <div class="content">
        <!--Left side content-->

        <div class="text-sci">
          <h2>Sign In<br />Here</h2>
        </div>

        <div class="text-sci2">
          <h2>To Access The Page</h2>

          <div class="social-icons">
            <%= link_to '#', class: 'bx bxl-linkedin' do %>
              <i class="bx bxl-linkedin"></i>
            <% end %>
            <%= link_to '#', class: 'bx bxl-instagram' do %>
              <i class="bx bxl-instagram"></i>
            <% end %>
            <%= link_to '#', class: 'bx bxl-facebook' do %>
              <i class="bx bxl-facebook"></i>
            <% end %>
            <%= link_to '#', class: 'bx bxl-twitter' do %>
              <i class="bx bxl-twitter"></i>
            <% end %>
          </div>
        </div>
      </div>

      <div class="logreg-box">
        <div class="form-box login">
          <%= form_with model: @user, url: login_normal_user_path, local: true do |f| %>
            <h2>Sign In</h2>

            <div class="input-box">
              <span class="icon">
                <i class="bx bxs-envelope"></i>
              </span>
              <%= f.email_field :email, required: true, placeholder: 'Your Email', class: 'input-field' %>
            </div>

            <div class="input-box">
              <span class="icon">
                <i class="bx bxs-lock-alt"></i>
              </span>
              <%= f.password_field :password, required: true, placeholder: 'Your Password', class: 'input-field' %>
            </div>

            <div class="remember-forgot">
              <label> <%= f.check_box :remember_me %> Remember me </label>
              <%# <%= link_to 'Forgot password?', forgot_password_path %> 
            </div>

            <%= f.submit 'Sign In', class: 'btn' %>

            <div class="login-register">
              <p>
                Don't have an account?
                <%= link_to 'Signup', new_normal_user_registration_path, class: 'register-link' %>
              </p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
</div>
